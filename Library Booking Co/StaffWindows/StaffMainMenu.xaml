                    </Setter>
                </Style>
            </Button.Style>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect ShadowDepth="5" Color="DarkGreen" Opacity=".1" RenderingBias="Performance"  />
            </Button.Effect>
        </Button>
        <Button  x:Name="btnReport" Margin="304,543,346.556,62.556" BorderThickness="0" HorizontalContentAlignment="Left" Click="btnReport_Click" Content="Reports">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" >
                        <Setter.Value>
                            <LinearGradientBrush  StartPoint="0,0" EndPoint="0,1" Opacity="1">
                                <GradientStop Color="#7cb342" Offset="0"/>
                                <GradientStop Color="#aed581" Offset="0.33"/>
                                <GradientStop Color="#dcedc8" Offset="0.66"/>
                            </LinearGradientBrush>
